<Window x:Class="ExcelShSy.Ui.EditLoadFilesWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:ExcelShSy.Localization;assembly=ExcelShSy.Localization"
        xmlns:local="clr-namespace:ExcelShSy.Ui"
        x:DataType="local:EditLoadFilesWindow"
        Title="{loc:Loc EditLoadFilesWindow.Title}" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen" 
        MinWidth="250" MinHeight="400" MaxHeight="400" Width="300" MaxWidth="300">

    <Grid Background="White" Margin="0 0 0 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" x:Name="FilesControl" Grid.ColumnSpan="2" >
            <TabItem Header="{loc:Loc EditLoadFilesWindow.TargetFiles}" x:Name="Target">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,3">
                        <Button Padding="5 0" Tag="Target" Click="RemoveFile_Click" Content="{loc:Loc EditLoadFilesWindow.Delete}" />
                        <Button Padding="5 0" Tag="Target" Click="AddFile_Click" Margin="2 0" Content="{loc:Loc EditLoadFilesWindow.AddFile}" />
                    </StackPanel>

                    <DataGrid IsReadOnly="False" Grid.Row="1" HeadersVisibility="Column" ItemsSource="{Binding TemperaryTargetFiles}" AutoGenerateColumns="False" CanUserResizeColumns="False" CanUserReorderColumns="False" CanUserSortColumns="False" ColumnWidth="*" GridLinesVisibility="None" >
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="Auto" Header="{loc:Loc EditLoadFilesWindow.CheckBox}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelectedToRemove}" 
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  IsHitTestVisible="False"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelectedToRemove, Mode=TwoWay}" 
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="*" Header="{loc:Loc EditLoadFilesWindow.File}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>

                                        <TextBlock Text="{Binding Name}" Padding="10 0" >
                                            <TextBlock.Styles>
                                                <Style Selector="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                </Style>
                                            </TextBlock.Styles>
                                        </TextBlock>

                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="auto" Header="{loc:Loc EditLoadFilesWindow.Info}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="i" Click="ShowInfo_Click" FontWeight="DemiBold" FontStyle="Italic" FontSize="15" Width="40" Height="40" Background="Transparent" BorderThickness="0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="{loc:Loc EditLoadFilesWindow.Sourcefiles}" x:Name="Source">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,3">
                        <Button Padding="5 0" Tag="Source" Click="RemoveFile_Click" Content="{loc:Loc EditLoadFilesWindow.Delete}" />
                        <Button Padding="5 0" Tag="Source" Click="AddFile_Click" Margin="2 0" Content="{loc:Loc EditLoadFilesWindow.AddFile}" />
                    </StackPanel>

                    <DataGrid IsReadOnly="False" Grid.Row="1" HeadersVisibility="Column" ItemsSource="{Binding TemperarySourceFiles}" AutoGenerateColumns="False" CanUserResizeColumns="False" CanUserReorderColumns="False" CanUserSortColumns="False" ColumnWidth="*" GridLinesVisibility="None" >
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="Auto" Header="{loc:Loc EditLoadFilesWindow.CheckBox}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelectedToRemove}" 
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  IsHitTestVisible="False"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelectedToRemove, Mode=TwoWay}" 
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="*" Header="{loc:Loc EditLoadFilesWindow.File}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>

                                        <TextBlock Text="{Binding Name}" Padding="10 0" >
                                            <TextBlock.Styles>
                                                <Style Selector="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                </Style>
                                            </TextBlock.Styles>
                                        </TextBlock>

                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="auto" Header="{loc:Loc EditLoadFilesWindow.Info}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="i" Click="ShowInfo_Click" FontWeight="DemiBold" FontStyle="Italic" FontSize="15" Width="40" Height="40" Background="Transparent" BorderThickness="0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="76,3,0,3" Grid.ColumnSpan="2">
            <Button Content="{loc:Loc EditLoadFilesWindow.Cancel}" Click="Close_Click" Padding="10 2" Margin="2 0" MinWidth="100"/>
            <Button Content="{loc:Loc EditLoadFilesWindow.Apply}" Click="ApplyButton_Click" Padding="10 2" MinWidth="110"/>
        </StackPanel>
    </Grid>
</Window>
