<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        CanResize="False"
        x:Class="ExcelShSy.Ui.Windows.CheckConnectionWindow"
        Title="Check ethernet connection"
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    
    <StackPanel Margin="10" >
        
        <Grid Margin="0,0,10,0">
            <TextBlock x:Name="TimerBlock" />
            <TextBlock x:Name="TextBlock" HorizontalAlignment="Right" Padding="10,0"/>
        </Grid>
        
        <ProgressBar x:Name="ProgressBar" Height="20" />
        
        <TextBox x:Name="RuntimeLogs" IsReadOnly="True" Margin="0,10" CaretBrush="Transparent" Focusable="False" />
        
        <Button Content="Stop" HorizontalAlignment="Right" Click="CancelButton_OnClick"/>
    </StackPanel>
</Window>
