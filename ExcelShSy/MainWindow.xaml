<Window x:Class="ExcelShSy.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       mc:Ignorable="d"
       Title="ExcelShSy"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        MinWidth="400" MinHeight="300">

    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- getTarget -->
            <Button Grid.Row="0" Grid.Column="0" Margin="10 0" Content="{Binding [GetTargetFile], Source={StaticResource Loc}}" Padding="5,0" Height="20" Click="GetTargetFile_Click"/>
            <TextBlock x:Name="GetTargetFileLable" Text="Last file" Grid.Row="0" Grid.Column="1" Margin="0 0 10 0" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" MaxWidth="250" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
            <Button Grid.Row="0" Grid.Column="2" Content="{Binding [EditFiles], Source={StaticResource Loc}}" HorizontalAlignment="Left"  Padding="5,0" VerticalAlignment="Center"/>

            <!-- getSource -->
            <Button Grid.Row="1" Grid.Column="0" Margin="10 0" Content="{Binding [GetSourceFile], Source={StaticResource Loc}}" Padding="5,0" Height="20" Click="GetSourceFile_Click"/>
            <TextBlock x:Name="GetSourceFileLable" Text="Last file" Grid.Row="1" Grid.Column="1" Margin="0 0 10 0" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" MaxWidth="250" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
            <Button Grid.Row="1" Grid.Column="2" Content="{Binding [EditFiles], Source={StaticResource Loc}}" HorizontalAlignment="Left"  Padding="5,0" VerticalAlignment="Center"/>

            <Grid Grid.Row="2" Grid.ColumnSpan="4"  Margin="0,63,0,0" x:Name="TaskGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- operations -->
                <CheckBox Grid.Row="0" Grid.Column="0" Margin="10, 5" Content="{Binding [SyncPrice], Source={StaticResource Loc}}" HorizontalAlignment="Left"  VerticalAlignment="Top" Tag="SyncPrice" Click="CheckBox_Click"/>
                <CheckBox Grid.Row="1" Grid.Column="0" Margin="10, 5" Content="{Binding [SyncAvailability], Source={StaticResource Loc}}" HorizontalAlignment="Left"  VerticalAlignment="Top" Tag="SyncAvailability" Click="CheckBox_Click"/>
                <CheckBox Grid.Row="2" Grid.Column="0" Margin="10, 5" Content="{Binding [SyncQuantity], Source={StaticResource Loc}}" HorizontalAlignment="Left"  VerticalAlignment="Top" Tag="SyncQuantity" Click="CheckBox_Click"/>
                <CheckBox Grid.Row="3" Grid.Column="0" Margin="10, 5" Content="{Binding [SyncDiscount], Source={StaticResource Loc}}" HorizontalAlignment="Left"  VerticalAlignment="Top" Tag="SyncDiscount" Click="CheckBox_Click"/>
                <CheckBox Grid.Row="4" Grid.Column="0" Margin="10, 5" Content="{Binding [DiscountDate], Source={StaticResource Loc}}" HorizontalAlignment="Left"  VerticalAlignment="Top" Tag="DiscountDate" Click="CheckBox_Click"/>

                <CheckBox Grid.Row="0" Grid.Column="1" Margin="10, 5" Content="{Binding [RoundUp], Source={StaticResource Loc}}" HorizontalAlignment="Left" VerticalAlignment="Top" Tag="IsRound" Click="CheckBox_Click"/>
                <CheckBox Grid.Row="0" Grid.Column="2" Margin="10, 5" Content="{Binding [IncreasePricePercent], Source={StaticResource Loc}}" HorizontalAlignment="Left" VerticalAlignment="Top" Tag="IncreasePricePercent" Click="CheckBox_Click"/>
                <TextBox Grid.Row="0" Grid.Column="3" Margin="10, 5" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="50" Name="IncreasePercentTextBox" TextChanged="ChangeIncreasePercent_TextChanged" PreviewTextInput="IncreasePercentTextBox_PreviewTextInput" DataObject.Pasting="IncreasePercentTextBox_Pasting"/>
                <CheckBox Grid.Row="0" Grid.Column="4" Margin="10, 5" Content="{Binding [RoundUp], Source={StaticResource Loc}}" HorizontalAlignment="Left" VerticalAlignment="Top" Tag="IsRound" Click="CheckBox_Click"/>
            </Grid>

            <!-- start -->
            <Button Grid.Row="3" Grid.Column="3" x:Name="ExecuteTasks" MinWidth="120" Content="{Binding [ExecuteTasks], Source={StaticResource Loc}}" Margin="10, 10" Click="ExecuteTasks_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>

        </Grid>
    </ScrollViewer>
</Window>
