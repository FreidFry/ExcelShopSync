<Window x:Class="ExcelShSy.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       mc:Ignorable="d"
       Title="ExcelShSy" Height="450" Width="800">
    <Grid>
        <!-- getTarget -->
        <Button x:Name="GetTargetFile" Content="{Binding [GetTargetFile], Source={StaticResource Loc}}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="Auto" Padding="5, 0" Click="GetTargetFile_Click" Height="20"/>
        <Label x:Name="GetTargetFileLable" Content="Label" Margin="126,7,10,0" VerticalAlignment="Top" Height="26"/>

        <!-- getSource -->
        <Button x:Name="GetSourceFile" Content="{Binding [GetSourceFile], Source={StaticResource Loc}}" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="Auto" Padding="5, 0" Click="GetSourceFile_Click" Height="20"/>
        <Label x:Name="GetSourceFileLable" Content="Label" HorizontalAlignment="Left" Margin="126,32,0,0" VerticalAlignment="Top" Width="664" Height="26" Grid.ColumnSpan="3"/>

        <Grid Margin="0,63,0,0" x:Name="TaskGrid" Grid.ColumnSpan="3">
            <!-- isPriceList -->

            <!-- operations -->
            <CheckBox Content="SyncPrice" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Tag="SyncPrice" Click="CheckBox_Click"/>
            <CheckBox Content="округлить" HorizontalAlignment="Left" Margin="104,30,0,0" VerticalAlignment="Top" Width="74" Tag="IsRound" Click="CheckBox_Click"/>
            <CheckBox Content="SyncAvailability" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Tag="SyncAvailability" Click="CheckBox_Click"/>
            <CheckBox Content="SyncQuantity" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Tag="SyncQuantity" Click="CheckBox_Click"/>
            <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Tag="SyncDiscount" Click="CheckBox_Click"/>
            <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="9,110,0,0" VerticalAlignment="Top" Tag="DiscountDate" Click="CheckBox_Click"/>
            <DatePicker HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" Tag="DiscountStartDate"
                        SelectedDateChanged="StartDatePicker_SelectedDateChanged" IsTodayHighlighted="True" SelectedDateFormat="Short" Width="126"/>
            <DatePicker HorizontalAlignment="Left" Margin="141,130,0,0" VerticalAlignment="Top" Tag="DiscountEndDate" SelectedDateChanged="EndDatePicker_SelectedDateChanged" Width="121"/>

        </Grid>

        <!-- start -->
        <Button x:Name="ExecuteTasks" Content="Button" Margin="0,0,10,10" Click="ExecuteTasks_Click" HorizontalAlignment="Right" Width="108" Height="20" VerticalAlignment="Bottom" Grid.Column="2"/>

    </Grid>
</Window>
