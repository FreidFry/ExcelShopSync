<Window x:Class="ExcelShSy.LocalDataBaseModule.DataBaseViewer"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ExcelShSy.Localization;assembly=ExcelShSy.Localization"
        Title="{local:Loc DataBaseViewer.Title}"
        WindowStartupLocation="CenterScreen"
        Height="450" Width="800">
    
    <Grid RowDefinitions="Auto,*">
        <DockPanel>
            <Button Content="{local:Loc DataBaseViewer.AddProductButton}" Click="AddNewProduct_Click" />
            <TextBox Watermark="{local:Loc DataBaseViewer.SearchWatermark}" Margin="50 0" TextChanging="TextBox_OnTextChanging" />
        </DockPanel>
        <DataGrid Grid.Row="1" x:Name="Table" AutoGenerateColumns="False" CanUserSortColumns="False" SelectionMode="Single"/>
    </Grid>
</Window>
