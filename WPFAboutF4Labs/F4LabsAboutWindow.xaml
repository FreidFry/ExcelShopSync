<Window x:Class="WPFAboutF4Labs.F4LabsAboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelShSy.Localization;assembly=ExcelShSy.Localization"
        mc:Ignorable="d"
        Title="{local:Loc F4LabsAboutWindow.Title}" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <TextBlock x:Name="Version" HorizontalAlignment="Center" TextAlignment="Center" />
            <TextBlock Text="{local:Loc F4LabsAboutWindow.AboutDevelop}" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,10" />
            <TextBlock Text="{local:Loc F4LabsAboutWindow.AboutProgram}" HorizontalAlignment="Center" TextAlignment="Center" />
        </StackPanel>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10">
            <TextBlock Text="{local:Loc F4LabsAboutWindow.SupportSegment}" HorizontalAlignment="Center" TextAlignment="Center" />
            <TextBlock Text="PayPal (USD)" HorizontalAlignment="Center" TextAlignment="Center" />
            <Button Content="Donate" Click="PayPalDonateButton_Click" HorizontalAlignment="Center" Margin="0 0 0 10" Padding="20 0" />
            <TextBlock Text="Boosty" HorizontalAlignment="Center" TextAlignment="Center" />
            <Button Content="Donate" Click="BoostyDonateButton_Click" HorizontalAlignment="Center" Margin="0 0 0 10" Padding="20 0" />
            <TextBlock Text="Monobank Jar (UAH)" HorizontalAlignment="Center" TextAlignment="Center" />
            <Button Content="Donate" Click="MonoBankJarButton_Click" HorizontalAlignment="Center" Margin="0 0 0 10" Padding="20 0" />

        </StackPanel>
        <TextBlock Grid.Row="2" x:Name="Copyrignt" TextAlignment="Center" VerticalAlignment="Bottom" HorizontalAlignment="Center" />
        <Button Grid.Row="2" Content="OK" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="30 0" Margin="0 0 15 15" Click="CloseButton_Click" />

    </Grid>
</Window>
